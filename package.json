{
  "name": "@churchapps/apphelper-workspace",
  "version": "0.4.12",
  "description": "Workspace for ChurchApps AppHelper packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "build:apphelper": "npm run build --workspace=packages/apphelper",
    "build:login": "npm run build --workspace=packages/login",
    "build:donations": "npm run build --workspace=packages/donations",
    "publish:all": "npm run build && npm publish --workspace=packages/apphelper --access=public && npm publish --workspace=packages/login --access=public && npm publish --workspace=packages/donations --access=public"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}