{
  "name": "@churchapps/apphelper-markdown",
  "version": "0.5.6",
  "description": "ChurchApps markdown/lexical editor components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "tsc": "tsc",
    "copy-assets": "npm-run-all copy-css copy-html-css copy-icons copy-emojis copy-html-icons copy-html-emojis",
    "copy-css": "copyfiles -f src/components/markdownEditor/editor.css dist/components/markdownEditor",
    "copy-html-css": "copyfiles -f src/components/htmlEditor/editor.css dist/components/htmlEditor",
    "copy-icons": "copyfiles -f src/components/markdownEditor/images/icons/* dist/components/markdownEditor/images/icons",
    "copy-emojis": "copyfiles -f src/components/markdownEditor/images/emoji/* dist/components/markdownEditor/images/emoji",
    "copy-html-icons": "copyfiles -f src/components/markdownEditor/images/icons/* dist/components/htmlEditor/images/icons",
    "copy-html-emojis": "copyfiles -f src/components/markdownEditor/images/emoji/* dist/components/htmlEditor/images/emoji",
    "build": "npm-run-all clean tsc copy-assets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiveChurchSolutions/AppHelper.git"
  },
  "keywords": [
    "ChurchApps",
    "markdown",
    "lexical",
    "editor"
  ],
  "author": "ChurchApps.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LiveChurchSolutions/AppHelper/issues"
  },
  "homepage": "https://github.com/LiveChurchSolutions/AppHelper#readme",
  "peerDependencies": {
    "@churchapps/helpers": "^1.2.4",
    "@churchapps/apphelper": "^0.5.6",
    "@mui/material": "^7.3.1",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@lexical/code": "^0.33.1",
    "@lexical/html": "^0.33.1",
    "@lexical/link": "^0.33.1",
    "@lexical/list": "^0.33.1",
    "@lexical/markdown": "^0.33.1",
    "@lexical/react": "^0.33.1",
    "@lexical/rich-text": "^0.33.1",
    "@lexical/selection": "^0.33.1",
    "@lexical/table": "^0.33.1",
    "@lexical/utils": "^0.33.1",
    "lexical": "^0.33.1",
    "marked": "^16.1.2",
    "material-symbols": "^0.33.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "copyfiles": "^2.4.1",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
